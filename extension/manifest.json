{
  "manifest_version": 3,
  "name": "Lyryc Music Detector",
  "version": "0.1.0",
  "description": "Detects currently playing music from multiple streaming platforms",
  
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging"
  ],
  
  "host_permissions": [
    "*://open.spotify.com/*",
    "*://music.youtube.com/*",
    "*://music.apple.com/*",
    "*://soundcloud.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://open.spotify.com/*"
      ],
      "js": ["spotify-detector.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://music.youtube.com/*"
      ],
      "js": ["youtube-detector.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://music.apple.com/*"
      ],
      "js": ["apple-music-detector.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://soundcloud.com/*"
      ],
      "js": ["soundcloud-detector.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lyryc Music Detector"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}